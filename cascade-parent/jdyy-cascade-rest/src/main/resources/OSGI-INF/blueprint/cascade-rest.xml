<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
       http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">

    <reference id="cascadeBeanService" interface="com.kalix.jdyy.cascade.api.biz.ICascadeBeanService"/>
    <camelContext id="cascadeCamel" xmlns="http://camel.apache.org/schema/blueprint">
        <restConfiguration component="servlet" bindingMode="json">
            <dataFormatProperty key="prettyPrint" value="${rest.pretty}"/>
        </restConfiguration>

        <rest path="/jdyy/cascades" consumes="application/json;charset=utf-8" produces="application/json">
            <description>cascade rest service</description>
            <get id="route-getAllCascade"
                 outType="com.kalix.jdyy.cascade.api.model.CascadeData">
                <description>Finde all cascade</description>
                <to uri="bean:cascadeBeanService?method=getAllCascade()"/>
            </get>
            <post id="route-addCascade" type="com.kalix.jdyy.cascade.entities.CascadeBean"
                  outType="com.kalix.framework.core.api.persistence.JsonStatus">
                <description>Create a columnrecord</description>
                <to uri="bean:cascadeBeanService?method=saveEntity"/>
            </post>
        </rest>
        <rest path="/jdyy/cascades/{id}" consumes="application/json;charset=utf-8" produces="application/json">
            <!-- this is a rest GET to view a template by the given id -->
            <get  id="route-getcascades" outType="com.kalix.jdyy.cascade.entities.CascadeBean">
                <description>Find columnrecord by id</description>
                <to uri="bean:cascadeBeanService?method=getEntity(${header.id})"/>
            </get>
            <!-- this is a rest PUT to update a template -->
            <put  id="route-updateCascades" type="com.kalix.jdyy.cascade.entities.CascadeBean"
                  outType="com.kalix.framework.core.api.persistence.JsonStatus">
                <description>Updates a columnrecord</description>
                <to uri="bean:cascadeBeanService?method=updateEntity"/>
            </put>
            <!-- this is a rest DELETE to delete a template -->
            <delete  id="route-deleteCascades"
                     outType="com.kalix.framework.core.api.persistence.JsonStatus">
                <description>Delete a columnrecord</description>
                <to uri="bean:cascadeBeanService?method=deleteEntity(${header.id})"/>
            </delete>
        </rest>
    </camelContext>
</blueprint>