<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
       http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">

    <reference id="statBeanService" interface="com.kalix.jdyy.stat.api.biz.IStatBeanService"/>
    <camelContext id="statCamel" xmlns="http://camel.apache.org/schema/blueprint">
        <restConfiguration component="servlet" bindingMode="json">
            <dataFormatProperty key="prettyPrint" value="${rest.pretty}"/>
        </restConfiguration>

        <rest path="/jdyy/stats" consumes="application/json;charset=utf-8" produces="application/json">
            <get id="route-getAllStats"
                 outType="com.kalix.framework.core.api.persistence.JsonData">
                <description>Finde all Stats</description>
                <to uri="bean:statBeanService?method=getAllEntityByQuery(${header.page},${header.limit},${header.jsonStr},${header.sort})"/>
            </get>
            <get id="route-getAllByDate"
                 outType="com.kalix.framework.core.api.persistence.JsonData" uri="/getAllByDate">
                <description>Finde by Date</description>
                <to uri="bean:statBeanService?method=getAllByDate(${header.date})"/>
            </get>
            <get id="route-getAllByYear"
                 outType="java.util.Arrays" uri="/getAllByYear">
                <description>Finde by Date</description>
                <to uri="bean:statBeanService?method=getAllByYear(${header.date})"/>
            </get>
            <post id="route-addStats" type="com.kalix.jdyy.stat.entities.StatBean"
                outType="com.kalix.framework.core.api.persistence.JsonStatus">
                <description>Create a Stats</description>
                <to uri="bean:statBeanService?method=saveEntity"/>
            </post>
        </rest>

        <rest path="/jdyy/stats/{id}" consumes="application/json;charset=utf-8" produces="application/json">
            <!-- this is a rest GET to view a template by the given id -->
            <get  id="route-getStats" outType="com.kalix.jdyy.stat.entities.StatBean">
                <description>Find Stats by id</description>
                <to uri="bean:statBeanService?method=getEntity(${header.id})"/>
            </get>
            <!-- this is a rest PUT to update a template -->
            <put  id="route-updateStats" type="com.kalix.jdyy.stat.entities.StatBean"
                  outType="com.kalix.framework.core.api.persistence.JsonStatus">
                <description>Updates a Stats</description>
                <to uri="bean:statBeanService?method=updateEntity"/>
            </put>
            <!-- this is a rest DELETE to delete a template -->
            <delete  id="route-deleteStats"
                     outType="com.kalix.framework.core.api.persistence.JsonStatus">
                <description>Delete a Stats</description>
                <to uri="bean:statBeanService?method=deleteEntity(${header.id})"/>
            </delete>
        </rest>
    </camelContext>
</blueprint>